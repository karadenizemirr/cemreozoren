<section class="pb-7 shadow-5 mt-5">
    <div class="container">
        <div class="d-md-flex justify-content-md-between mb-6">
            <div>
                <h2 class="fs-35 font-weight-600 lh-15 text-heading">{{result.title}}</h2>
                <p class="mb-0"><i class="fal fa-map-marker-alt mr-2"></i>{{result.location.address}}</p>
            </div>
            <div class="mt-2 text-md-right">
                <p class="fs-22 text-heading font-weight-bold mb-0">
                    {{result.description.before_price_label}}&nbsp;{{result.description.price_in}}&nbsp;{{result.after_price_label}}
                </p>
            </div>
        </div>
        <div class="galleries position-relative">
            <div class="tab-content p-0 shadow-none">
                <div class="tab-pane fade show active" id="image" role="tabpanel">
                    <div class="slick-slider dots-white arrow-inner"
                        data-slick-options='{"slidesToShow": 1, "autoplay":false}'>
                        {{#each result.media}}
                        <div class="box">
                            <div class="item item-size-3-2">
                                <div class="card p-0">
                                    <a href="/public/uploads/{{this.image_path}}" class="card-img" data-gtf-mfp="true"
                                        data-gallery-id="03"
                                        style="background-image:url('/public/uploads/{{this.image_path}}')">
                                    </a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
